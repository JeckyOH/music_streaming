{% extends 'layout.njk' %}

{% block more_heads  %}
    <style>
        body {
            background-image: url("/img/login.jpg");
            background-size: cover;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
    <div class="row">
        <div class="page-header">
            <br>
            <br>
            <h1>Login your account</h1>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="login" method="post">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                    <input type="text" class="form-control" placeholder="Username"  name="username" aria-describedby="basic-addon1">
                </div>
                <br>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-earphone"></span></span>
                    <input type="password" class="form-control" placeholder="Password" name="password" aria-describedby="basic-addon1">
                </div>
                <br>
                <div class="form-group">
                    <a href="/register" id="register-btn" class="btn btn-primary btn-lg pull-left">Register</a>
                    <button type="submit" class="btn btn-primary btn-lg pull-right" name="submit" value="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}
