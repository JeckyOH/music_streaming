{% extends 'layout.njk' %}

{% block more_heads  %}
    <style>
        .tall {
            padding: 20px;
            font-size: large;
            text-align: center;
            opacity: 0.8;
            border-right: 0;
            border-top: 0;
            border-left: 0;
            border-bottom: 0;
            width: 180%;
        }
        .content {
            color: black;
            opacity: 0.8;
            border-right: 0;
            border-top: 0;
            border-left: 0;
            border-bottom: 0;
        }
        .panel-heading {
            font-size: x-large;
            border: 0px solid transparent;
        }
        .panel {
            border: 1px solid transparent;
            color: #ffffff;
            -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
            box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
            opacity:0.7;
        }
    </style>
{% endblock %}

{% block content %}
    <<div class="page-header"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">{{ alname }}</div>
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr style="color: black">
                                    <th>Name</th>
                                    <th>Artist</th>
                                    <th>Play</th>
                                    <th>Add</th>
                                </tr>
                            </thead>
                            <tbody>
                                    {% for item in tracks %}
                                        <tr>
                                            <td class="content">{{ item.ttitle }}</td>
                                            <td class="content">{{ item.tid }}</td>
                                            <td class="content"><button class="btn btn-default" onclick="playtrack('{{ item.tid }}')">
                                                    <span class="glyphicon glyphicon-play"></span></button></td>
                                            <td class="content"><button class="btn btn-default">
                                                    <span class="glyphicon glyphicon-plus"></span></button></td>
                                        </tr>
                                    {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
{% endblock %}
